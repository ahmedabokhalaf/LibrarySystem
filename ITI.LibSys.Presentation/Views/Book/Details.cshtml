@model Book

<form>
    <div class="form-group row">
        <label asp-for="ID" class="col-sm-3 col-form-label">Book ID: </label>
        <div class="col-sm-9">
            <input asp-for="ID" class="form-control" readonly value="@Model.ID" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-3 col-form-label">Book Title: </label>
        <div class="col-sm-9">
            <input asp-for="Title" class="form-control" readonly value="@Model.Title" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author.Name" class="col-sm-3 col-form-label">Book Author: </label>
        <div class="col-sm-9">
            <input asp-for="Author.Name" class="form-control" readonly value="@Model.Author.Name" />
        </div>
    </div>
    @if(User.IsInRole("Editor")){
        <div>
            <a asp-action="Edit" asp-controller="Book" asp-route-id="@Model.ID" class="btn btn-info">Edit</a>
            <a asp-action="Delete" asp-controller="Book" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
        </div>
    }
    <div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
    </div>
</form>


@section LeftPanel{
    <h1 style="color: greenyellow">The Book#@Model.ID Details</h1>
}

@section RightPanel{
    <div style="width: 80%;margin:20px;">
        <img src="@ViewBag.Images/@Model.BookImages.FirstOrDefault()?.Path" style="width:100%;height:150px;"/>
    </div>
    <h3 style="color: dodgerblue">Discription</h3>
    <p style="font-size:15pt">
        @Model.Discription
    </p>
}