@model Book
<h3>Are you sure you want to delete this?</h3>
<div class="row col-md-4">
    <form method="post" asp-action="Delete" asp-controller="Book">
        <div class="form-group">
            <label asp-for="ID" class="control-label">Book Id</label>
            <input asp-for="ID" class="form-control" readonly value="@Model.ID" />
        </div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Book Title</label>
            <input asp-for="Title" name="bookTitle" class="form-control" readonly value="@Model.Title" />
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Book" class="btn btn-outline-info">Cancel</a>
    </form>
</div>

@section LeftPanel{
    <h1 style="color: greenyellow">Book Delation</h1>
}

@section RightPanel{
    <div style="width: 80%;margin:20px;">
        <img src="~/Content/Images/@Model.BookImages.FirstOrDefault()?.Path" width="100%" height="150px" />
    </div>
    <h3 style="color: dodgerblue">Discription</h3>
    <p style="font-size:15pt">
        @Model.Discription
    </p>
}